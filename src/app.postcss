.gradient-heading {
	@apply bg-clip-text text-transparent box-decoration-clone;
	/* Direction */
	@apply bg-gradient-to-br;
	/* Color Stops */
	@apply from-purple-200 to-pink-400;
}

.gradient-button {
	/* Direction */
	@apply bg-gradient-to-br;
	/* Color Stops */
	@apply from-purple-200 to-pink-400;
}
